{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} RedeMaroc - Slider {% endblock %}
{% block pagetitle %} <h3> Consulter et modifier l'image du slider </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Slider</li>
        <li class="breadcrumb-item active"><a href="{{ path('slider_list') }}"> Consulter </a></li>
    </ul>
{% endblock %}
{% block body %}

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">
                            <thead >
                            <tr>
                                <th>Image</th>
                                <th>Nom de la reference</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for s in slider %}
                                <tr>
                                    <td><img alt="pas d'image" src="{{ asset('uploads/slider/' ~ s.path) }}"  width="700" height="200"></td>
                                    <td> {{ s.texte }} </td>
                                    <td> <a href="{{ path('slider_edit', {'id' : s.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                                    <td> <a href="{{ path('slider_delete', {'id': s.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>

            </div>

        </div>

    </div>
    <td><a href="{{ path('slider_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>

    </div>



{% endblock %}