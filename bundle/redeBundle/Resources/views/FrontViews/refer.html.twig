                                                            <img class="img-secondaires" alt="img" src="{{ asset('uploads/ref1/' ~ refer.patha) }}">
                                                            <div class="mu-single-gallery-info">
                                                                <img class="mu-view-btn" src="{{ asset('FrontEnd/assets/img/plus.png') }}" alt="plus icon img">
                                                            </div>
                                                        </a>
                                                    {% else %}
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="col-md-3 product">
                                                <div class="mu-about-us-left">
                                                    {% if (refer.pathb is not null) %}
                                                        <a class="mu-imglink" href="{{ asset('uploads/ref2/' ~ refer.pathb) }}">
                                                            <img class="img-secondaires" alt="img" src="{{ asset('uploads/ref2/' ~ refer.pathb) }}">
                                                            <div class="mu-single-gallery-info">
                                                                <img class="mu-view-btn" src="{{ asset('FrontEnd/assets/img/plus.png') }}" alt="plus icon img">
                                                            </div>
                                                        </a>
                                                    {% else %}
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="col-md-3 product">
                                                <div class="mu-about-us-left">
                                                    {% if (refer.pathc is not null) %}
                                                        <a class="mu-imglink" href="{{ asset('uploads/ref3/' ~ refer.pathc) }}">
                                                            <img class="img-secondaires" alt="img" src="{{ asset('uploads/ref3/' ~ refer.pathc) }}">
                                                            <div class="mu-single-gallery-info">
                                                                <img class="mu-view-btn" src="{{ asset('FrontEnd/assets/img/plus.png') }}" alt="plus icon img">
                                                            </div>
                                                        </a>
                                                    {% else %}
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="col-md-3 product">
                                                <div class="mu-about-us-left">
                                                    {% if (refer.pathd is not null) %}
                                                        <a class="mu-imglink" href="{{ asset('uploads/ref4/' ~ refer.pathd) }}">
                                                            <img class="img-secondaires" alt="img" src="{{ asset('uploads/ref4/' ~ refer.pathd) }}">
                                                            <div class="mu-single-gallery-info">
                                                                <img class="mu-view-btn" src="{{ asset('FrontEnd/assets/img/plus.png') }}" alt="plus icon img">
                                                            </div>
                                                        </a>
                                                    {% else %}
                                                    {% endif %}
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                            </div>


                            {% if (refer.pathe|length != 0 ) %}

                                {#<div align="center" class="iframe-container" >

                                    <iframe class="video-css" src="https://www.youtube.com/embed/{{ produit.video }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>#}

                                <div class="alert alert-info">
                                    <a href="{{ asset('uploads/refdoc/' ~ refer.pathe) }}" target="_blank"><strong>Document</strong> {{ refer.ou }}</a>
                                </div>

                            {% else %}
                            {% endif %}


                        </div>

                        {#</section>#}
                        <!-- End Gallery -->


                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- End About us -->

