                    </div>#}

                    <div class="row">
                        <div class="col-md-12 product">
                            <div class="mu-about-us-leftt">
                                <img class="img-responsive center-block" src="{{ asset('uploads/references/' ~ refer.path) }}" alt="img">
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="mu-about-us-right" style="margin-top: 30px;">
                                <h2 class="comment-h21 text-description" > {{ refer.ou }} </h2>
                                <p class="text-description">
                                    {{ refer.description | raw }}
                                </p>

                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="mu-about-us-right" style="margin-top: 30px;">
                                <h2 class="comment-h21 text-description" > {{ refer.quoi }} </h2>
                                <p class="text-description">
                                    {{ refer.realisation | raw }}
                                </p>

                            </div>
                        </div>

                        <!-- Start plus d'image -->
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mu-gallery-area">


                                        <div class="mu-gallery-content">
                                            <div class="col-md-3 product">
                                                <div class="mu-about-us-left">
                                                    {% if (refer.patha is not null) %}
