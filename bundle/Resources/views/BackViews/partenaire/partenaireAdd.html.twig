{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} RedeMaroc - Partenaires {% endblock %}
{% block pagetitle %} <h3> Ajout d'un partenaire </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Nos partenaires </li>
        <li class="breadcrumb-item active"><a href="{{ path('partenaire_list') }}"> Ajout </a></li>
    </ul>
{% endblock %}
{% block body %}


    <form action="{{ path('partenaire_add') }} " method="post" {{ form_enctype(form) }} >
    {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
    {{ form_row(form._token) }}
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal">


                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Titre de l'image </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Image </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn">Enregistrer</button>
                            </div>
                        </div>


                    </form>

                </div>
            </div>
        </div>

    </form>

{% endblock %}
