{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} RedeMaroc - Références {% endblock %}
{% block pagetitle %} <h3> Consulter et modifier les référence </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Références</li>
        <li class="breadcrumb-item active"><a href="{{ path('refer_list') }}"> Consulter </a></li>
    </ul>
{% endblock %}
{% block body %}



    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table">
                        <thead >
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Image</th>
                            <th>Reference</th>
                            <th>Service</th>
                        </tr>
                        </thead>

                        {% for r in refer %}
                            <tr>
                                <td> <a href="{{ path('refer_edit', {'id' : r.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                                <td> <a href="{{ path('refer_delete', { 'id': r.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                <td><img alt="pas d'image" src="{{ asset('uploads/references/' ~ r.path) }}"  width="80" height="80"></td>
                                <td> {{ r.ou }} </td>
                                <td> {{ r.quoi }} </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
        <td><a href="{{ path('refer_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>



{% endblock %}