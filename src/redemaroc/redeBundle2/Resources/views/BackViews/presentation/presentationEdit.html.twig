{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} RedeMaroc - Presentation {% endblock %}
{% block pagetitle %} <h3> Modifier la presentation </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Presentation</li>
        <li class="breadcrumb-item active"><a href="{{ path('presentation_edit',{'id': ids }) }}"> Modifier </a></li>
    </ul>
{% endblock %}
{% block body %}

    <form action="{{ path('presentation_edit',{'id': ids }) }}" {{ form_enctype(form) }} method="POST" >
        {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
        {{ form_row(form._token) }}

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal">


                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Titre Presentation </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.titrep, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Presentation </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.presentation, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Titre 2 </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.titreda, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">contenu 2 </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.domaineactivite, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Image </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Meta Description </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.metadescription, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Meta Mot cl√© </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.metakeywords, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn">Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </form>

{% endblock %}

{% block javascript %}
    <script>
        CKEDITOR.replace( 'redemaroc_redebundle_presentation_presentation' );
    </script>
    <script>
        CKEDITOR.replace( 'redemaroc_redebundle_presentation_domaineactivite' );
    </script>
{% endblock %}
