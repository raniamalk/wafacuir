{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} RedeMaroc - Références {% endblock %}
{% block pagetitle %} <h3> Ajout d'une référence </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Nos références</li>
        <li class="breadcrumb-item active"><a href="{{ path('refer_list') }}"> Ajout </a></li>
    </ul>
{% endblock %}
{% block body %}


    <form action="{{ path('refer_add') }} " method="post" {{ form_enctype(form) }} >
    {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
    {{ form_row(form._token) }}
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal">


                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Lieu </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.ou, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Description du lieu </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Service </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.quoi, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Realisation </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.realisation, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Image </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.file, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Image 1 </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.filea, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Image 2 </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.fileb, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Image 3 </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.filec, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Image 4 </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.filed, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label"> Documents </label>
                            <div class="col-sm-9">
                                {{ form_widget(form.filee, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn">Enregistrer</button>
                            </div>
                        </div>


                    </form>

                </div>
            </div>
        </div>

    </form>

{% endblock %}
