{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} Wafacuir - Equipe {% endblock %}
{% block pagetitle %} <h3> Consulter et modifier l'Ã©quipe </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Equipe</li>
        <li class="breadcrumb-item active"><a href="{{ path('equipe_list') }}"> Consulter </a></li>
    </ul>
{% endblock %}
{% block body %}

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">
                            <thead >
                            <tr>
                                <th></th>
                                <th></th>
                                <th>Nom</th>
                                <th>Poste</th>
                                <th>Image</th>
                            </tr>
                            </thead>

                            {% for e in equipe %}
                                <tr>
                                    <td> <a href="{{ path('equipe_edit', {'id' : e.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                                    <td> <a href="{{ path('equipe_delete', { 'id': e.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                    <td> {{ e.nom }} </td>
                                    <td> {{ e.specialite}} </td>
                                    <td><img alt="pas d'image" src="{{ asset('uploads/equipe/' ~ e.path) }}"  width="80" height="80"></td>

                                </tr>
                            {% endfor %}

                        </table>
                    </div>
                </form>

            </div>

        </div>

    </div>
    <td><a href="{{ path('equipe_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>

    </div>



{% endblock %}