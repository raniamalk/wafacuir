{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} Wafacuir - Messages {% endblock %}
{% block pagetitle %} <h3> Consulter et modifier les messages </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Messages</li>
        <li class="breadcrumb-item active"><a href="{{ path('contact_list') }}"> Consulter </a></li>
    </ul>
{% endblock %}
{% block body %}

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">
                            <thead >
                            <tr>
                                <th></th>
                                <th></th>
                                <th> Nom </th>
                                <th> Telephone </th>
                                <th> Email </th>
                                <th> Objet </th>
                                <th> Message </th>
                                <th> Lu </th>
                            </tr>
                            </thead>

                            {% for c in contact %}
                                <tr>
                                    <td> <a href="{{ path('contact_edit', {'id' : c.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a> </td>
                                    <td> <a href="{{ path('contact_delete', {'id' : c.id}) }}"><span class="glyphicon glyphicon-trash"></span></a> </td>
                                    <td> {{ c.nom | slice(0, 20) ~ ' ...' }} </td>
                                    <td> {{ c.telephone |striptags | slice(0, 20) ~ ' ...' }} </td>
                                    <td> {{ c.email |striptags | slice(0, 20) ~ ' ...' }} </td>
                                    <td> {{ c.objet | slice(0, 20) ~ ' ...' }} </td>
                                    <td> {{ c.message |striptags | slice(0, 20) ~ ' ...' }} </td>
                                    <td>{% if c.publish =='1'%}<span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>{% else %}<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>{%endif%}</td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>

            </div>

        </div>

    </div>

    </div>



{% endblock %}