{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} Wafacuir - Partenaires {% endblock %}
{% block pagetitle %} <h3> Consulter et modifier les partenaires </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Partenaires</li>
        <li class="breadcrumb-item active"><a href="{{ path('partenaire_list') }}"> Consulter </a></li>
    </ul>
{% endblock %}
{% block body %}



    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table">
                        <thead >
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Image</th>
                            <th>titre de l'image</th>
                        </tr>
                        </thead>

                        {% for p in partenaire %}
                            <tr>
                                <td> <a href="{{ path('partenaire_edit', {'id' : p.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                                <td> <a href="{{ path('partenaire_delete', { 'id': p.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                <td><img alt="pas d'image" src="{{ asset('/web/uploads/partenaires/' ~ p.path) }}"  width="80" height="80"></td>
                                <td> {{ p.titre }} </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
        <td><a href="{{ path('partenaire_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>
    </div>



{% endblock %}