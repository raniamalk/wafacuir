{% extends 'redeBundle::BackViews/index.html.twig' %}
{% block title %} Wafacuir - video {% endblock %}
{% block pagetitle %} <h3> Consulter et modifier la video </h3> {% endblock %}
{% block pagenav %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">Video</li>
        <li class="breadcrumb-item active"><a href="{{ path('video_list') }}"> Consulter </a></li>
    </ul>
{% endblock %}
{% block body %}

    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <form class="form-horizontal">
                    <div class="table-responsive">
                        <table class="table" id="table">
                            <thead >
                            <tr>
                                <th>Video</th>
                                <th></th>
                                <th></th>

                            </tr>
                            </thead>

                            {% for v in video %}
                                <tr>
                                    <td><video width="320" height="240" controls src="#"></video></td>
                                    <td> <a href="{{ path('video_edit', {'id' : v.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
                                    <td> <a href="{{ path('video_delete', {'id': v.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                </tr>
                            {% endfor %}

                        </table>

                    </div>
                </form>

            </div>

        </div>

    </div>
    <td><a href="{{ path('video_add') }}"><span class="btn info" aria-hidden="true"> Ajouter </span></a></td>

    </div>



{% endblock %}