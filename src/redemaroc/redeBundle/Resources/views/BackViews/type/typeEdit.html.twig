                                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'id':'inputdefault'}}) }}
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-3">
                                <button type="submit" class="btn">Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </form>



