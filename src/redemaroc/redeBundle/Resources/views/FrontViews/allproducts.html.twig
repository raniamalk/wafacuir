{% block slider %} {% endblock %}

{% block body %}





        <div class="col-12 col-md-12 col-lg-12">
            <div class="shop_grid_product_area">
                <div class="row">

                    {% for p in produit %}
                    <!-- Single gallery Item -->
                    <div class="col-12 col-sm-6 col-lg-3 single_gallery_item wow fadeInUpBig" data-wow-delay="0.2s">
                        <!-- Product Image -->
                        <div class="product-img">
                            <img alt="pas d'image" src="{{ asset('uploads/produitPrincipale/' ~ p.path) }}"  width="80" height="80">
                            <a href="{{ path('produit_page', {'id' : p.id}) }}">
                            <div class="product-quicview">
                                <a href="{{ path('produit_page', {'id' : p.id}) }}" data-toggle="modal" {#data-target="#quickview"#}><i class="ti-plus"></i></a>
                            </div>
                            </a>
                        </div>
                        <!-- Product Description -->
                        <div class="product-description">
                            <p class="titre-produit"> <td> {{ p.titre }} </td></p>
                            <h4 class="prix-produit">{{ p.prix }}</h4>
                            <!-- Add to Cart -->
                            <a href="#" class="add-to-cart-btn">ADD TO CART</a>
                        </div>
                    </div>
                    {% endfor %}


                </div>
            </div>

